<h1><em><%= @horse.horse_name %></em> </h1>

<ul id="details">
  <li>
    Brand Number:
    <%= @horse.brand_number %>
  </li>
  <li>
    Available?
    <%= @horse.availability %>
  </li>
</ul>
<h2>Description</h2>
<%= @horse.description %>

<h2> Navigation</h2>

<%= button_to 'Edit', edit_horse_path(@horse), method: 'get'%>
<%= button_to 'Remove', horse_path(@horse), method: 'delete', data: { confirm: 'Are you sure?' } %>

<%= render "horses/backhorse" %>
<%= render "pages/backhome" %>