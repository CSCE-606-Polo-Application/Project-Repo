<h2>Select New Riding Preference For <%= @member.std_first_name %> <%= @member.std_last_name%></h2>

<%= form_with model: @riding_preference, url: member_riding_preferences_path do |form| %>
  <div>
    <%= form.label :horse_name %><br>
    <%= form.select :horse_id, @horses, { prompt: "Select Horse" }%>
  </div>

  <div>
  <%= form.submit %>
  </div>
<% end %>